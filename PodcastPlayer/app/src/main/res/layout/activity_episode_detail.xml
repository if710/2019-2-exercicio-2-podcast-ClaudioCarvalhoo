<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodeDetailActivity">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="519dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo Bom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episodeLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.amazon.com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episodePubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/11/2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episodeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podcast do bom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Link: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episodeDownloadLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.amazon.com/download-podcast" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>